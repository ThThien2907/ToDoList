    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <EditText
        android:id="@+id/edt_new_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
